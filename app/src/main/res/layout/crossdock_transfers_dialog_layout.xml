<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="eryaz.software.carParts.ui.dashboard.inbound.placement.placementDetail.crossdock.CrossDockTransferVM" />
    </data>

    <eryaz.software.carParts.util.widgets.StateView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:onRetryClick="@{()-> viewModel.checkCrossDock()}"
        app:sv_ignore_referenced_ids="toolbar"
        app:sv_viewState="@{viewModel.uiState}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <eryaz.software.carParts.util.widgets.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/back_icon"
                app:title="@string/crossdock_request" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                android:background="@color/bgColor"
                app:layout_constraintBottom_toTopOf="@+id/buttonLayout"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="24dp">

                    <TableLayout
                        android:id="@+id/tableRoot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="@dimen/_8sdp"
                        android:stretchColumns="3">

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/table_row_bottomline">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_marginVertical="8dp"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="18sp"
                                tools:text="@string/product_code" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/txt_productcode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_marginVertical="8dp"
                                android:layout_span="2"
                                android:fontFamily="@font/sogeoui"
                                android:text="@{viewModel.productDto.code}"
                                android:textSize="18sp"
                                tools:text="GDB-400" />
                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/table_row_bottomline">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_marginVertical="8dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/product_name"
                                android:textSize="18sp" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/txt_productname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_marginVertical="8dp"
                                android:layout_span="2"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{viewModel.productDto.definition}"
                                android:textSize="15sp"
                                tools:text="FREN BALATA " />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/table_row_bottomline">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_marginVertical="8dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/control_point"
                                android:textSize="18sp" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/txt_controlpoint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_marginVertical="8dp"
                                android:layout_span="2"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{viewModel.code}"
                                android:textColor="@color/colorDangerRed"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                tools:text="12" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/table_row_bottomline">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_marginVertical="8dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/need_qty"
                                android:textSize="18sp" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/txt_qty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_marginVertical="8dp"
                                android:layout_span="2"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{viewModel.quantityCross}"
                                android:textSize="18sp"
                                tools:text="5 " />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/table_row_bottomline">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_marginVertical="8dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/transferable_qty"
                                android:textSize="18sp" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/txt_qty_max"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_marginVertical="8dp"
                                android:layout_span="2"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{viewModel.maxQuantity}"
                                android:textSize="18sp"
                                tools:text="20" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/table_row_bottomline">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_marginVertical="8dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/transfer_qty"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/edt_qty"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:gravity="center"
                                android:hint="@string/qty"
                                android:inputType="number"
                                android:text="@={viewModel.quantity}"
                                android:textSize="@dimen/_16sdp"
                                android:textStyle="bold" />
                        </TableRow>

                    </TableLayout>

                    <eryaz.software.carParts.util.widgets.TextInputLayout
                        android:id="@+id/noteTill"
                        style="@style/Widget.Zeus.SearchInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="12dp"
                        android:elevation="10dp"
                        android:hint="MenÅŸei">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/noteEdt"
                            style="@style/Widget.Zeus.SearchInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:text="@={viewModel.note}"
                            android:textColorHint="@color/logoGray"
                            android:textSize="18sp"
                            app:fontFamily="@font/sogeoui" />
                    </eryaz.software.carParts.util.widgets.TextInputLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:id="@+id/buttonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/bgColor"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/shelfPlacement"
                    style="@style/Widget.NewZeusDemo.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="@string/shelf_placement"
                    android:textSize="16sp"
                    app:fontFamily="@font/sogeoui" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/placementToControlPoint"
                    style="@style/Widget.NewZeusDemo.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="@string/control_point_placement"
                    android:textSize="16sp"
                    app:fontFamily="@font/sogeoui" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include layout="@layout/layout_loading" />
        <include layout="@layout/layout_error" />

    </eryaz.software.carParts.util.widgets.StateView>
</layout>